    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "python",
            "request": "launch",
            "name": "client",
            "program": "${workspaceFolder}/blocking-client/get-poetry.py",
            "args": [
                "10000",
                "10001",
                "10002",
            ]
        },
        {
            "type": "python",
            "request": "launch",
            "name": "server10000",
            "program": "${workspaceFolder}/blocking-server/slowpoetry.py",
            "args": [
                "--port",
                "10000",
                "poetry/ecstasy.txt",
                "--num-bytes",
                "30"
            ]
        },
        {
            "type": "python",
            "request": "launch",
            "name": "server10001",
            "program": "${workspaceFolder}/blocking-server/slowpoetry.py",
            "args": [
                "--port",
                "10001",
                "poetry/fascination.txt"
            ]
        },
        {
            "type": "python",
            "request": "launch",
            "name": "server10002",
            "program": "${workspaceFolder}/blocking-server/slowpoetry.py",
            "args": [
                "--port",
                "10002",
                "poetry/science.txt"
            ]
        }
    ]
}